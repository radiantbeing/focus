    "description": "편리한 독서 기록을 위한 전자 책갈피 애플리케이션",
    "keywords": [
        "reading",
        "read",
        "book",
        "bookmark"
    ],
    "homepage": "https://github.com/radiantbeing/focus#readme",
    "bugs": {
        "url": "https://github.com/radiantbeing/focus/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/radiantbeing/focus.git"
    },
    "author": "김인화 <inhwa.kim@outlook.com>",
    "type": "module",
    "scripts": {
        "dev:client": "vite client/",
        "build:client": "tsc --project client/ && vite build client/",
        "preview:client": "vite preview client/",
        "lint:client": "eslint --config client/eslint.config.js client/",
        "dev:server": "tsx watch server/src/index.ts",
        "build:server": "rm -rf server/dist/ && tsc --project server/",
        "preview:server": "node server/dist/index.js",
        "lint:server": "eslint --config server/eslint.config.js server/",
        "format": "prettier --write ."
    },
    "dependencies": {
        "express": "^5.1.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "tailwindcss": "^4.1.11"
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "@tailwindcss/vite": "^4.1.11",
        "@types/express": "^5.0.3",
        "@types/node": "^24.2.0",
        "@types/react": "^19.1.9",
        "@types/react-dom": "^19.1.7",
        "@vitejs/plugin-react": "^4.7.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tsx": "^4.20.3",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.0",
        "vite": "^7.0.6"
    },
    "volta": {
        "node": "22.18.0"
    }
