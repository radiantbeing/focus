{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // 런타임 환경 옵션
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],

    // 모듈 옵션
    "module": "ESNext",
    "moduleResolution": "bundler",

    // 경로 옵션
    "baseUrl": ".",
    "paths": {
      "@client/*": ["src/*"],
      "@shared/*": ["../shared/src/*"]
    },

    // 빌드 옵션
    "noEmit": true,
    "jsx": "react-jsx",
    "tsBuildInfoFile": "../node_modules/.tmp/tsconfig.client.app.tsbuildinfo"
  },
  "include": ["src"]
}
